---
import "../styles/general.css";
const {color, opacity} = Astro.props;
---
<button class={color + " " + opacity}><slot /></button>

<style>
button{
    border: solid;
    border-width: medium;
    border-radius: 10px;
    color: white;
    background-color: rgb(0 0 0 / 0%);
    transition: background-color 0.3s, color 0.3s;
    padding: 1.5vw 3.5vw;
    font-size: 0.8em;
    font-family: Amiko-Regular;
    cursor: pointer;
    border-width: 0.8vw; /* Justér kantens tykkelse*/
}
button:hover {
    transform: scale(1.1); /* Increase size by 10% */
  }
.pink{
    color: var(--pink);
}
.green{
    color: var(--green);
}
.hvidbaggrund{
    background-color: rgba(255, 255, 255, 0.3);
}
.sortbaggrund{
    background-color: rgba(0, 0, 0, 0.3);
}


@media (min-width: 768px){
    button{
    border: solid;
    border-width: medium;
    border-radius: 1em;
    color: white;
    background-color: rgb(0 0 0 / 0%);
    transition: background-color 0.3s, color 0.3s;
    padding: 1.3vw 2.3vw;
    font-size: 1.2em;
    font-family: Amiko-Regular;
    cursor: pointer;
    border-width: 0.4vw; /* Justér kantens tykkelse*/
}
}
</style>